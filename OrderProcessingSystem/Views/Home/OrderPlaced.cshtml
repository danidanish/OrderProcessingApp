@model List<OrderProcessingSystem.Models.Orders.Orders>
@{ 
    var message = ViewBag.message;
}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    .quantity {
        display: inline-block;
        width: 30px;
        text-align: center;
    }
</style>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var product = Model[i];
            <tr>
                <td>@product.Name</td>
                <td>@product.Quantity</td>
                <td>@product.TotalPrice</td>
            </tr>
        }

    </tbody>
</table>

<main aria-labelledby="title">
    <h3>@message</h3>
</main>